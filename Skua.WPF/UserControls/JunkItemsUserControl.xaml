<UserControl
    x:Class="Skua.WPF.UserControls.JunkItemsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    xmlns:materialDesing="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance vms:JunkItemsViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header, skip warning and total count -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            FontSize="14"
            FontWeight="Bold"
            Text="Junk Items" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <CheckBox
                Margin="0,0,8,0"
                VerticalAlignment="Center"
                Content="Skip warning"
                IsChecked="{Binding SkipSellWarning}" />
            <TextBlock Text="{Binding TotalJunk, StringFormat=Total Junk: {0}}" />
        </StackPanel>

        <!-- Search -->
        <TextBox
            x:Name="SearchBox"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,4,0,4"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesing:HintAssist.Hint="Search (ID or name)"
            TextChanged="SearchBox_TextChanged" />

        <!-- Combined inventory + bank list -->
        <ListBox
            x:Name="ItemsList"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,4,0,4"
            ItemsSource="{Binding Items}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox
                            Margin="0,0,4,0"
                            IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding Display}" />
                        <TextBlock
                            Margin="6,0,0,0"
                            Foreground="OrangeRed"
                            Text="[Junk]"
                            Visibility="{Binding IsJunk, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Actions -->
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,4,4,0"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                Margin="0,4,4,0"
                Command="{Binding MarkAsJunkCommand}"
                Content="Mark as Junk" />
            <Button
                Margin="0,4,4,0"
                Command="{Binding UnmarkAsJunkCommand}"
                Content="Unmark Junk" />
            <Button
                Margin="0,4,4,0"
                Command="{Binding UnmarkAllJunkCommand}"
                Content="Unmark All" />
            <Button
                Margin="0,4,0,0"
                Command="{Binding SellAllJunkCommand}"
                Content="Sell All Junk" />
        </StackPanel>
    </Grid>
</UserControl>